# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# HuggingFace Configuration (alternative to OpenAI)
HUGGINGFACE_API_TOKEN=your_huggingface_token_here

# Database Configuration
DATABASE_URL=sqlite:///./resume_relevance.db

# LangSmith Configuration (optional)
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=resume-relevance-system

# Application Settings
APP_NAME=Resume Relevance Check System
APP_VERSION=1.0.0
SECRET_KEY=your_secret_key_here_change_in_production

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=pdf,docx

# Scoring Weights
HARD_MATCH_WEIGHT=0.4
SEMANTIC_MATCH_WEIGHT=0.6

# Model Settings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
LLM_MODEL=gpt-3.5-turbo
TEMPERATURE=0.1

# Vector Database
VECTOR_DB_TYPE=chromadb  # or faiss
VECTOR_DB_PATH=./vector_store
