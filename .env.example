# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Basic Configuration
APP_NAME=Resume Relevance Check System
APP_VERSION=1.0.0
SECRET_KEY=your_very_secure_secret_key_here_change_this

# Database Configuration (for production, use PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/resume_checker
# For development/testing, you can use SQLite:
# DATABASE_URL=sqlite:///./resume_relevance.db

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=pdf,docx

# Scoring Weights
HARD_MATCH_WEIGHT=0.4
SEMANTIC_MATCH_WEIGHT=0.6

# AI/ML Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
TEMPERATURE=0.1

# OpenAI Configuration (optional - for advanced AI features)
OPENAI_API_KEY=your_openai_api_key_here

# HuggingFace Configuration (optional)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Vector Database Configuration
VECTOR_DB_TYPE=chromadb
VECTOR_DB_PATH=./vector_store

# Upload Directory
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=INFO

# CORS Settings (for production, specify actual domains)
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8501", "https://yourdomain.com"]

# Production Settings
ENVIRONMENT=production
DEBUG=false
